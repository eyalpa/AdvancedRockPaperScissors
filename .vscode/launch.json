{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Launch Program",
        "skipFiles": ["<node_internals>/**"],
        "program": "${workspaceFolder}/src/index.ts",
        "preLaunchTask": "tsc: build - tsconfig.json",
        "outFiles": ["${workspaceFolder}/dist/**/*.js"],
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Game vs Human",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "runGameVsHuman"
        ],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Game vs Bot",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "runGameVsBot"
        ],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      },
      {
        "type": "node",
        "request": "launch",
        "name": "Run Game vs Monkey",
        "runtimeExecutable": "npm",
        "runtimeArgs": [
          "run",
          "runGameVsMonkey"
        ],
        "skipFiles": ["<node_internals>/**"],
        "console": "integratedTerminal"
      }
    ]
  }
  